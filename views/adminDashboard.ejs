<%- include('header.ejs') %>
<div class="navbar">
  <nav>
    <ul>
      
      <li><a href="/user/city_view">City Tracker</a></li>
      <li><a href="/user/datewise_data">Datewise Data</a></li>
      <li><a href="/user/worldwide_data">Death Rate</a></li>
      <li><a href="/">Logout</a></li>
    </ul>
  </nav>
</div>
<div class="container mt-5">
  

  <div class="card">
    <div class="card-body">
      <table class="table table-bordered">
        <thead>
          <h1 class="display-4">Admin Dashboard</h1>
          <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr>
              <td><strong><%= user.username %></strong></td>
              <td><%= user.email %></td>
              <td><%= user.role %></td>
              <td>
                <a href="/admin/edit/<%= user._id %>" class="btn btn-sm btn-info">
                  <i class="fas fa-edit"></i> 
                </a>
                <form action="/admin/delete/<%= user._id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-sm btn-danger">
                    <i class="fas fa-trash-alt"></i> 
                  </button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
      <a href="/admin/create" class="btn btn-success">Create User</a>
    </div>
  </div>

</div>
</body>
</html>