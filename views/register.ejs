<!-- views/register.ejs -->
<%- include('header.ejs') %>

<div class="container mt-5">
  <div class="card">
    <div class="card-body">
      <h1 class="display-4" style="font-weight: bold;">Register</h1>
      <form action="/register" method="post">
        <!-- Add registration form fields as needed -->
        <div class="mb-3">
          <label for="username" class="form-label" style="font-weight: bold;">Username</label>
          <input type="text" class="form-control" id="username" name="username" required>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label" style="font-weight: bold;">Email</label>
          <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label" style="font-weight: bold;">Password</label>
          <input type="password" class="form-control" id="password" name="password" required>
        </div>
        <div class="mb-3 form-check">
          <input type="checkbox" class="form-check-input" id="isAdminCheckbox" name="isAdminCheckbox">
          <input type="hidden" id="isAdmin" name="isAdmin" value="false"> <!-- Hidden input field for isAdmin -->
          <label class="form-check-label" for="isAdminCheckbox" style="font-weight: bold;">Register as Admin</label>
        </div>

        <button type="submit" class="btn btn-success" style="font-weight: bold;">Register</button>
      </form>

      <!-- Social media login options -->
      <div class="mt-3">
        <p style="font-weight: bold;">Or register with:</p>
        <a href="/auth/google" class="btn btn-danger">
          <i class="fab fa-google"></i> Google
        </a>
        <a href="/auth/facebook" class="btn btn-primary">
          <i class="fab fa-facebook"></i> Facebook
        </a>
      </div>
    </div>
  </div>
</div>

<script>
document.getElementById('isAdminCheckbox').addEventListener('change', function() {
  document.getElementById('isAdmin').value = this.checked ? 'true' : 'false';
});
</script>
